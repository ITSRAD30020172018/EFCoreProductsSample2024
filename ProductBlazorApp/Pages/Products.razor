@page "/products"

<h3>Products</h3>

<p>@ProductsList.Count()</p>


<h1 class="page-title">All Products</h1>
@if (ProductsList == null)
{
    <p><em>Loading.......</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Description</th>
                <th>Qty in Stock</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in ProductsList)
            {
            <tr>
                <td>@p.ID</td>
                <td>@p.Description</td>
                <td>@p.StockOnHand</td>
                <td>
                    <a href="@($"productdetail/{p.ID}")" class="btn btn-primary table-btn">
                        Detail
                    </a>
                </td>
                <td>
                    <a href="@($"editproduct/{p.ID}")" class="btn btn-primary table-btn">
                        Edit
                    </a>
                </td>

            </tr>
            }
        </tbody>
    </table>
}